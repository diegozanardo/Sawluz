@model IEnumerable<Sawlux.ViewModel.RestauranteVM>

<p>
    @using (Html.BeginForm("Index", "Restaurante", FormMethod.Get))
    {
        <div class="form-horizontal">
            <h4>Filters</h4>
            <hr />
            <div class="form-group">
                @Html.Label("Nome", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("restaurante")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Pesquisar" class="btn btn-default" />
                    @Html.ActionLink("Cadastrar Novo restaurante", "Cadastro")
                </div>
            </div>
        </div>
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Cadastro", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
